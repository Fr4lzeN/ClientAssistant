<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/splashScreenFragment">


    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.businesshub.presentation.authorization.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_companyNameFragment"
            app:destination="@id/company_creation"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashScreenFragment_to_personInfoFragment"
            app:destination="@id/person"
            app:popUpTo="@id/splashScreenFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.businesshub.presentation.authorization.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_companyNameFragment"
            app:destination="@id/company_creation"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_personInfoFragment"
            app:destination="@id/person"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.businesshub.presentation.authorization.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registrationFragment_to_companyNameFragment"
            app:destination="@id/company_creation"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_registrationFragment_to_personInfoFragment"
            app:destination="@id/person"
            app:popUpTo="@id/registrationFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.businesshub.presentation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <navigation android:id="@+id/person"
        app:startDestination="@id/personInfoFragment">
        <fragment
            android:id="@+id/personInfoFragment"
            android:name="com.example.businesshub.presentation.create_person.PersonInfoFragment"
            android:label="fragment_person_info"
            tools:layout="@layout/fragment_person_info">
            <action
                android:id="@+id/action_personInfoFragment_to_personPictureFragment"
                app:destination="@id/personPictureFragment" />
        </fragment>
        <fragment
            android:id="@+id/personPictureFragment"
            android:name="com.example.businesshub.presentation.create_person.PersonPictureFragment"
            android:label="fragment_person_picture"
            tools:layout="@layout/fragment_person_picture">
            <action
                android:id="@+id/action_personPictureFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:popUpTo="@id/personInfoFragment"
                app:popUpToInclusive="true" />
            <action
                android:id="@+id/action_personPictureFragment_to_companyNameFragment"
                app:destination="@id/company_creation"
                app:popUpTo="@id/personInfoFragment"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>
    <navigation android:id="@+id/company_creation"
        app:startDestination="@id/companyNameFragment">
        <fragment
            android:id="@+id/companyNameFragment"
            android:name="com.example.businesshub.presentation.create_company.CompanyNameFragment"
            android:label="fragment_company_name"
            tools:layout="@layout/fragment_company_name">
            <action
                android:id="@+id/action_companyNameFragment_to_companyUSRLEFragment"
                app:destination="@id/companyUSRLEFragment" />
        </fragment>
        <fragment
            android:id="@+id/finishCompanyCreatingFragment"
            android:name="com.example.businesshub.presentation.create_company.FinishCompanyCreatingFragment"
            android:label="fragment_finish_company_creating"
            tools:layout="@layout/fragment_finish_company_creating">
            <action
                android:id="@+id/action_finishCompanyCreatingFragment_to_homeFragment"
                app:destination="@id/homeFragment"
                app:popUpTo="@id/companyNameFragment"
                app:popUpToInclusive="true" />
        </fragment>
        <fragment
            android:id="@+id/companyUSRLEFragment"
            android:name="com.example.businesshub.presentation.create_company.CompanyUSRLEFragment"
            android:label="fragment_company_usrle"
            tools:layout="@layout/fragment_company_usrle">
            <action
                android:id="@+id/action_companyUSRLEFragment_to_finishCompanyCreatingFragment"
                app:destination="@id/finishCompanyCreatingFragment" />
        </fragment>
    </navigation>
</navigation>